<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/divider_horizontal_textfield"
    android:paddingTop="13dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="_______"
            android:layout_width="90dp"
            android:layout_height="31dp"
            android:id="@+id/Time"
            android:layout_alignParentTop="false"/>

        <TextView
            android:text="__________"
            android:layout_width="104dp"
            android:layout_height="match_parent"
            android:id="@+id/group"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentTop="false"/>

        <TextView
            android:text="_______"
            android:layout_width="match_parent"
            android:id="@+id/roomNumb"
            android:layout_height="31dp"
            android:layout_alignParentTop="false"
            android:elevation="0dp"
            android:singleLine="true"
            android:layout_gravity="right"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp">

        <TextView
            android:text="_______________________"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TeachersName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/roomNumb"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp"
        android:background="@drawable/border"
        >

        <TextView
            android:text="__________________"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lessonsName"
            android:layout_below="@+id/TeachersName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            />

    </FrameLayout>

</RelativeLayout>