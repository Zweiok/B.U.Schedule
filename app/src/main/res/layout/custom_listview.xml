<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/divider_horizontal_textfield"
    android:paddingTop="13dp">

    <LinearLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:minHeight="22dp">

        <TextView
            android:id="@+id/Time"
            android:layout_width="90dp"
            android:layout_height="31dp"
            android:layout_alignParentTop="false"
            android:text="_______" />

        <TextView
            android:id="@+id/group"
            android:layout_width="104dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false"
            android:text="__________" />

        <TextView
            android:id="@+id/roomNumb"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_alignParentTop="false"
            android:layout_gravity="right"
            android:elevation="1dp"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="_______"
            android:textAlignment="gravity" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:minHeight="34dp">

        <TextView
            android:id="@+id/TeachersName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/roomNumb"
            android:text="_______________________"
            android:textSize="12sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp"
        android:background="@drawable/border"
        >

        <TextView
            android:text="__________________"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lessonsName"
            android:layout_below="@+id/TeachersName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="91dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            app:srcCompat="@drawable/ic_action_name1"
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:minHeight="22dp"
            android:maxHeight="2dp" />
    </FrameLayout>

</RelativeLayout>